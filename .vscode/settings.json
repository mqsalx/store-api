{
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "eslint.workingDirectories": [
    {"mode": "auto"}
  ]
}